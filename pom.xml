         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.sharkman</groupId>
    <artifactId>node-tree</artifactId>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <properties>
        <node.tree.core.version>1.0-SNAPSHOT</node.tree.core.version>
        <node.tree.run.version>1.0-SNAPSHOT</node.tree.run.version>
    </properties>
    <modules>
        <module>node-tree-core</module>
        <module>node-tree-run</module>
    </modules>
    <dependencies>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.18.10</version>
            <optional>true</optional>
        </dependency>
    </dependencies>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <!-- Import dependency management from Spring Boot -->
                <groupId>com.sharkman</groupId>
                <artifactId>node-tree-core</artifactId>
                <version>${node.tree.core.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>
